{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Zora React Native TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", ".expo", "dist", "ios", "android"]
}
