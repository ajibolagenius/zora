# ===========================================
# Zora African Market - Environment Variables
# ===========================================

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Mobile (Expo) - Same values as above with EXPO prefix
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Stripe Payment Processing
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# Google Maps
# Get this from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Klarna (Optional - Buy Now Pay Later)
NEXT_PUBLIC_KLARNA_CLIENT_ID=your_klarna_client_id

# Clearpay (Optional - Buy Now Pay Later)
NEXT_PUBLIC_CLEARPAY_MERCHANT_ID=your_clearpay_merchant_id

# Postmark Email Service (Optional)
POSTMARK_API_KEY=your_postmark_api_key

# Application URLs (Production)
NEXT_PUBLIC_APP_URL=https://zoraapp.co.uk
NEXT_PUBLIC_VENDOR_URL=https://vendor.zoraapp.co.uk
NEXT_PUBLIC_ADMIN_URL=https://admin.zoraapp.co.uk
